@model ChemicalPropertiesApp.ViewModels.LoginModel

<style>
    .field-validation-error { 
        color: red
    }
</style>

<section class="vh-100">
    <div class="mask d-flex mt-3 h-100">
        <div class="container h-100">
            <div class="row d-flex mt-3 justify-content-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6">
                    <div class="card shadow" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            <h4 class="fw-bold text-center mb-3">Вход</h4>
                            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                                <div class="validation" asp-validation-summary="ModelOnly"></div>
                                <div class="form-outline mt-5 mb-4">
                                    <input type="text" placeholder="Введите логин" asp-for="Login" class="form-control"/>
                                    <span class="field-validation-error" asp-validation-for="Login"></span>
                                </div>
                                <div class="form-outline mb-4">
                                    <input type="password" placeholder="Введите пароль" asp-for="Password" class="form-control"/>
                                    <span class="field-validation-error" asp-validation-for="Password"></span>
                                </div>
                                
                                <div class="d-flex justify-content-center">
                                    <button type="submit"
                                            class="btn btn-primary btn-block col-xs-12 col-xs-offset-0 col-sm-offset-3 col-sm-12">
                                        Войти
                                    </button>
                                </div>
                                <p class="text-center text-muted mt-5 mb-0">
                                    Ещё не зарегистрированы?
                                    <a class="fw-bold text-body" asp-action="Register" asp-controller="Account">Зарегистрироваться</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>